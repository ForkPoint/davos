    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Davos Watch",
			"program": "${workspaceFolder}/../davos-cli/index.js",
			"cwd": "${workspaceFolder}/../davos-sample-project",
			"args": [
				"watch"
            ],
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Davos Create",
			"program": "${workspaceFolder}/../davos-cli/index.js",
			"cwd": "${workspaceFolder}/../davos-sample-project",
			"args": [
				"create"
            ],
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart"
		}
    ]
